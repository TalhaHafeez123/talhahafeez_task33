<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D6BCBA"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="289dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="makhārij al-ḥurūf"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#00BCD4"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <Button
            android:id="@+id/quiz"
            android:layout_width="187dp"
            android:layout_height="52dp"
            android:text="Start Quiz"
            app:backgroundTint="#8BC34A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.013" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="180dp"
            android:layout_height="43dp"
            android:layout_marginBottom="124dp"
            android:gravity="center"
            android:text="BITF18A5505"
            android:textColor="#00BCD4"
            android:textColorHighlight="#9E3A3A"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/git"
            app:layout_constraintVertical_bias="0.177" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:gravity="center"
            android:text="Talha Hafeez"
            android:textColor="#00BCD4"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="121dp"
            android:layout_height="30dp"
            android:text="Commits For Git"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quiz"
            app:layout_constraintVertical_bias="0.021" />

        <Button
            android:id="@+id/git"
            android:layout_width="156dp"
            android:layout_height="70dp"
            android:layout_marginBottom="204dp"
            android:text="Git Repository"
            app:backgroundTint="#8BC34A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="273dp"
            android:layout_height="283dp"
            app:layout_constraintBottom_toTopOf="@+id/git"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.15"
            app:srcCompat="@drawable/heyy" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>